#######################################

#Set '1' to build with GCC
#Set '2' to build with CLANG
#Default is empty. It will build with GCC. To build with different compiler just use : env _compiler=(1 or 2) makepkg -s
if [ -z ${_compiler+x} ]; then
  _compiler=
fi

#######################################

pkgname=vkd3d-proton-git
pkgver=2.5.r88.gc0a3fa8a
pkgrel=1
pkgdesc='D3D12 to Vulkan translation library (git version)'
arch=(x86_64)
url='https://source.winehq.org/git/vkd3d.git'
license=(LGPL)
depends=(spirv-tools vulkan-icd-loader libxcb)
makedepends=(git meson ninja glslang spirv-headers vulkan-headers xcb-proto wine xorgproto xcb-util-keysyms)
if [[ "$_compiler" = "1" ]]; then
  makedepends+=(gcc gcc-libs)
fi
if [[ "$_compiler" = "2" ]]; then
  makedepends+=(clang llvm llvm-libs)
fi
conflicts=(vkd3d-proton)
provides=(vkd3d-proton vkd3d-proton-git)
source=(git+https://github.com/HansKristian-Work/vkd3d-proton.git)
md5sums=(SKIP)

pkgver(){
  cd ${srcdir}/vkd3d-proton
  
  # cutting off 'foo-' prefix that presents in the git tag
  #git describe --long | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'

  #git describe --long | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
  #git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare(){
  cd ${srcdir}/vkd3d-proton

  git submodule update --init --recursive
}

build(){
if [[ $_compiler = "1" ]]; then
  export CC='gcc'
  export CXX='g++'
elif [[ $_compiler = "2" ]]; then
  export CC='clang'
  export CXX='clang++'
else
  export CC='gcc'
  export CXX='g++'
fi

  cd ${srcdir}/vkd3d-proton

  rm -rf build64

  mkdir build64

  meson setup build64 \
  -D b_ndebug=true \
  -D buildtype=plain \
  --wrap-mode=nofallback \
  -Dprefix=/usr \
  -D sysconfdir=/etc \
  -Denable_tests=false \
  -Denable_extras=false \
  -Denable_d3d12=auto \
  -Denable_profiling=false \
  -Denable_renderdoc=false \
  -Denable_descriptor_qa=false \
  -Denable_trace=auto

  meson configure build64/

  meson compile -C build64/

  ninja -C build64/
}

package(){
  DESTDIR="${pkgdir}" ninja -C cd ${srcdir}/vkd3d-proton/build64/ install

  # installing license
  install -Dt "$pkgdir"/usr/share/licenses/"$pkgname" -m644 "$srcdir"/vkd3d-proton/LICENSE
  install -Dt "$pkgdir"/usr/share/licenses/"$pkgname" -m644 "$srcdir"/vkd3d-proton/COPYING
  install -Dt "$pkgdir"/usr/share/licenses/"$pkgname" -m644 "$srcdir"/vkd3d-proton/AUTHORS
}
